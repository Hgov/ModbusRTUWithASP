@page
@model ParametersModel
@{
    ViewData["Title"] = "Parameters";
    ViewData["Header1"] = "The Parameters CRUD Operations.";
}

<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Header1"]</h3>

<br />
<br />

<div class="row">
    <div class="col-md-12">
        <table class="table newparameter">
            <thead>
                <tr>
                    <th>ipaddress</th>
                    <th>name</th>
                    <th>number</th>
                    <th>offset</th>
                    <th>port</th>
                    <th>slave</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><input type="text" class="form-control newipaddress" value="" /></td>
                    <td><input type="text" class="form-control newname" value="" /></td>
                    <td><input type="text" class="form-control newnumber" value="" /></td>
                    <td><input type="text" class="form-control newoffset" value="" /></td>
                    <td><input type="text" class="form-control newport" value="" /></td>
                    <td><input type="text" class="form-control newslave" value="" /></td>
                    <td><input type="button" class="btn btn-success" onclick="parametercreate(this)" value="Add Parameter" /></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<br />
<div class="row">
    <div class="parameters col-md-12">
    </div>
</div>
<br />


<!-- Modal -->
<div class="modal fade parameterModal" tabindex="-1" role="dialog" aria-labelledby="parameterModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body parametermodalbody">
            </div>
            <div class="modal-footer">
                <span class="isstate"></span>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script src="~/js/Parameters.js" asp-append-version="true"></script>
}